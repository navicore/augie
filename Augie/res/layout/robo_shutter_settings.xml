<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

<TableLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >
	
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >

	<CheckBox
		android:id="@+id/robo_blackout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/aug_fld_title_blackout"
		/> 
	</TableRow>
	
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >
    <TextView
	android:layout_width="fill_parent"
	android:layout_weight="2"
	android:layout_height="wrap_content"
    android:text="@string/aug_fld_title_shooting_first_delay"
	/>
	<Spinner
	android:id="@+id/robo_init_interval"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	/>
	</TableRow>
	
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >
    <TextView
	android:layout_width="fill_parent"
	android:layout_weight="2"
	android:layout_height="wrap_content"
    android:text="@string/aug_fld_title_shooting_interval"
	/>
	<Spinner
	android:id="@+id/robo_interval"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	/>
	</TableRow>
	
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >
    <TextView
	android:layout_width="fill_parent"
	android:layout_weight="2"
	android:layout_height="wrap_content"
    android:text="@string/aug_fld_title_shooting_dur"
	/>
	<Spinner
	android:id="@+id/robo_duration"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	/>
	</TableRow>
	
</TableLayout>
</ScrollView>
