<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

<TableLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >
	
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >

	<CheckBox
		android:id="@+id/robo_blackout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Blackout screen while shooting" />
	</TableRow>
	
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >
    <TextView
	android:layout_width="fill_parent"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="First delay seconds" 
	/>
	</TableRow>
    
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >
	<Spinner
	android:id="@+id/robo_init_interval"
	android:layout_width="fill_parent"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	/>
	</TableRow>
	
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >
    <TextView
	android:layout_width="fill_parent"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="Shooting interval in seconds" 
	/>
	</TableRow>
    
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >
	<Spinner
	android:id="@+id/robo_interval"
	android:layout_width="fill_parent"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	/>
	</TableRow>
	
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >
    <TextView
	android:layout_width="fill_parent"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	android:text="Shooting duration in minutes" 
	/>
	</TableRow>
    
	<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    >
	<Spinner
	android:id="@+id/robo_duration"
	android:layout_width="fill_parent"
	android:layout_weight="1"
	android:layout_height="wrap_content"
	/>
	</TableRow>
	
</TableLayout>
</ScrollView>
